{
  "name": "@karpatkey/gnosis-pay-rewards-indexer",
  "description": "Indexer for Gnosis Pay rewards",
  "version": "0.1.0",
  "main": "build/index.js",
  "type": "module",
  "scripts": {
    "test": "jest",
    "build": "rimraf dist && tsc",
    "dev": "cross-env nodemon -x node --experimental-specifier-resolution=node --loader ts-node/esm src/index.ts",
    "lint": "prettier --check . !./dist !./.turbo && eslint \"./**!(dist|.turbo)/*+(.tsx|.ts)\"",
    "format": "prettier --write . !./dist !./.turbo && eslint --fix \"./**!(dist|.turbo)/*+(.tsx|.ts)\"",
    "graphql:codegen": "graphql-codegen --config graphql-codegen.yml",
    "start:node": "node --experimental-specifier-resolution=node dist/index.js",
    "start:pm2": "pm2 start dist/index.js --name lcmm"
  },
  "keywords": [],
  "license": "ISC",
  "dependencies": {
    "@karpatkey/gnosis-pay-rewards-sdk": "workspace:*",
    "@sentry/node": "^8.25.0",
    "@sentry/profiling-node": "^8.25.0",
    "@sentry/tracing": "^7.114.0",
    "@types/ws": "^8.5.10",
    "@wagmi/core": "^0.8.5",
    "axios": "^0.27.2",
    "chalk": "^5.2.0",
    "cors": "^2.8.5",
    "dayjs": "^1.11.7",
    "debug": "^4.3.4",
    "dotenv": "^16.0.1",
    "express": "^4.18.2",
    "jotai": "^2.2.1",
    "mongoose": "^7.1.0",
    "nanoid": "^4.0.1",
    "numeral": "^2.0.6",
    "redis": "^4.6.13",
    "socket.io": "^4.7.4",
    "viem": "^2.7.16",
    "ws": "^8.16.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@types/debug": "^4.1.7",
    "@types/express": "^4.17.21",
    "@types/memoizee": "^0.4.8",
    "@types/node": "^18.15.5",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-plugin-import": "^2.26.0",
    "jest": "^27.5.1",
    "nodemon": "^2.0.18",
    "prettier": "^3.2.5",
    "rimraf": "3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": "^18.11.9"
  }
}