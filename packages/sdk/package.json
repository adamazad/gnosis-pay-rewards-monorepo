{
  "name": "@karpatkey/gnosis-pay-rewards-sdk",
  "private": false,
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.esm.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "node": "./dist/index.js",
      "source": "./src/index.ts"
    }
  },
  "scripts": {
    "lint": "prettier --check . !./dist !./.turbo && eslint \"./**!(dist|.turbo)/*+(.tsx|.ts)\"",
    "format": "prettier --write . !./dist !./.turbo && eslint --fix \"./**!(dist|.turbo)/*+(.tsx|.ts)\"",
    "typechain": "node --experimental-specifier-resolution=node ./bin/typechain.js",
    "codegen:graphql": "graphql-codegen --config graphql-codegen.yml",
    "clean": "rimraf ./dist",
    "build": "pnpm clean && rollup -c",
    "test": "jest --passWithNoTests",
    "dev": "nodemon -x ts-node src/index.ts",
    "codegen": "echo 'No codegen for this package'",
    "prepare": "pnpm clean && pnpm build"
  },
  "dependencies": {
    "@metamask/eth-sig-util": "^5.0.2",
    "debug": "^4.3.4",
    "graphql-request": "^6.1.0",
    "graphql-tag": "^2.12.6",
    "nanoid": "^4.0.1",
    "tiny-invariant": "^1.3.1",
    "viem": "^2.7.16"
  },
  "devDependencies": {
    "@types/debug": "^4.1.8",
    "@babel/core": "^7.21.4",
    "@babel/preset-env": "^7.21.4",
    "@babel/preset-typescript": "^7.22.5",
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/typescript-graphql-request": "^5.0.0",
    "@graphql-codegen/typescript-operations": "^4.0.1",
    "@jest/globals": "^29.5.0",
    "@karpatkey/rollup-config": "workspace:*",
    "@types/jest": "^27.5.2",
    "@types/memoizee": "^0.4.8",
    "@types/node": "^18.15.11",
    "abitype": "^0.2.5",
    "babel-jest": "^29.5.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.56.0",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "rimraf": "3.0.2",
    "rollup": "^3.20.2",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "tslib": "^2.5.0",
    "typescript": "^5.4.5"
  },
  "peerDependencies": {
    "socket.io": "^4.7.5",
    "dayjs": "^1.11.7"
  }
}